@using BusinessLayer.DTOs.Book.Create;
@using BusinessLayer.DTOs.Publisher.View;
@using DataAccessLayer.Models.Enums
@model CreateBookDto

@{
    ViewData["Title"] = "Create";
}

<h1>Create Book</h1>
<hr />

@if (ViewBag.Message != null)
{
    <p class="alert alert-success" role="alert">
        @ViewBag.Message
    </p>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ISBN" class="form-label"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PublisherId" class="form-label">Publisher</label>
                <select asp-for="PublisherId" asp-items="ViewBag.Publishers" class="form-select"></select>
                <span asp-validation-for="PublisherId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AuthorIds" class="form-label">Co-Authors</label>
                <select asp-for="AuthorIds" asp-items="ViewBag.Authors" class="form-select"></select>
                <span asp-validation-for="AuthorIds" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="BookGenre" class="form-label"></label>
                <select asp-for="BookGenre" asp-items="Html.GetEnumSelectList<BookGenre>()" class="form-select"></select>
                <span asp-validation-for="BookGenre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
