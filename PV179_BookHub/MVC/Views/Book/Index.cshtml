@using BusinessLayer.DTOs.Book.View;
@model IEnumerable<GeneralBookViewDto>

<h1>Books</h1>

<p class="text-end">
    @Html.ActionLink("Create New", "Create")
</p>

@if (ViewBag.Message != null)
{
    <p class="alert alert-success" role="alert">
        @ViewBag.Message
    </p>
}


<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Authors
        </th>
        <th>
            Publisher
        </th>
        <th>
            Book Genre
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>


    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Authors)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookGenre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }
    else
    {
        <td colspan="6" class="text-center"><b>No Books Availible. Please Add Data By CLicking On The Create Button</b></td>
    }
</table>
