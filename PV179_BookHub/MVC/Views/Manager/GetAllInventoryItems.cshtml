@model IEnumerable<BusinessLayer.DTOs.BookStore.View.DetailedInventoryItemViewDto>

<h2>Inventory Items</h2>

<div style="text-align: right; margin-bottom: 10px;">
    <a href="@Url.Action("CreateInventoryItem", "Manager")" class="btn btn-primary">Create</a>
</div>

<table>
    <tr>
        <th>Inventoty Item ID</th>
        <th>Book ID</th>
        <th>Book Store Id</th>
        <th>Count of book in stock</th>
        <th>Last Restock</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.BookId</td>
            <td>@item.BookStoreId</td>

            <td>@item.InStock</td>
            <td>@item.LastRestock</td>
            <td>
                <div style="display: flex; align-items: center; justify-content: space-around;">
                    <a asp-action="GetInventoryItem" asp-route-id="@item.Id" class="btn btn-info" role="button" style="margin-right: 10px;">View</a>
                    <a asp-action="UpdateInventoryItem" asp-route-id="@item.Id" class="btn btn-primary" role="button" style="margin-right: 10px;">Edit</a>
                    <form asp-action="DeleteInventoryItem" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');" style="margin-right: 10px;">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </td>
        </tr>
    }
</table>
