@using BusinessLayer.DTOs.Address.View;
@model IEnumerable<DetailedAddressView>

<h1>Addresses</h1>

<p class="text-end">
    <a class="link-success" asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>
        <th>
            State
        </th>
        <th>
            City
        </th>
        <th>
            Street
        </th>
        <th>
            Street Number
        </th>
        <th>
            Postal Code
        </th>
        <th></th>
    </tr>


    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td class="text-end">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "link-warning" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "link-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "link-danger" })
                </td>
            </tr>
        }
    }
    else
    {
        <td colspan="6" class="text-center"><b>No Addresses Availible. Please Add Data By CLicking On The Create Button</b></td>
    }
</table>
