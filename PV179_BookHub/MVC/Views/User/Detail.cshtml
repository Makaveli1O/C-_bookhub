@using MVC.Models.User
@model MVC.Models.User.UserDetailViewModel

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User Detail</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-4">
        <h2>User Detail</h2>
        <hr />
        <div class="row">
            <dl class="col-md-10">
                <dt class="col-sm-3">User ID:</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Username:</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Role:</dt>
                <dd class="col-sm-9">@Model.Role</dd>
            </dl>
            <div class="col-md-2">
                <div class="row" style="margin-bottom:10px;"><a asp-controller="WishList" asp-route-id="@Model.Id" asp-action="User" class="btn btn-info">User Wishlists</a></div>
                <div class="row" style="margin-bottom:10px;"><a asp-controller="BookReview" asp-route-id="@Model.Id" asp-action="User" class="btn btn-success">User Book Reviews</a></div>
                <div class="row"><a asp-controller="Order" asp-route-id="@Model.Id"  asp-action="user" class="btn btn-warning">User Orders</a></div>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Users" class="btn btn-primary">Back to Users</a>
        </div>

    </div>

    <!-- Bootstrap JS and jQuery (for Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UoNrGEbjq8ftf4/8hU6I8NZSAqO6NicoVdeF83k3OILQlyj4UZBAdQ9UqnNqBEr2"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIMu4uZyl" crossorigin="anonymous"></script>
</body>
</html>
